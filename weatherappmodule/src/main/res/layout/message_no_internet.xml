<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_no_data_image_view"
        android:layout_width="179dp"
        android:layout_height="179dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/icon_no_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_update_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/no_update_text"
        app:layout_constraintEnd_toEndOf="@+id/icon_no_data_image_view"
        app:layout_constraintStart_toStartOf="@+id/icon_no_data_image_view"
        app:layout_constraintTop_toBottomOf="@+id/icon_no_data_image_view" />

    <TextView
        android:id="@+id/check_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/check_connection_text"
        app:layout_constraintEnd_toEndOf="@+id/no_update_text_view"
        app:layout_constraintStart_toStartOf="@+id/no_update_text_view"
        app:layout_constraintTop_toBottomOf="@+id/no_update_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>